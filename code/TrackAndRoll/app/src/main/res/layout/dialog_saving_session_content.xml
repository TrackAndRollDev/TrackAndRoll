<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:layout_margin="@dimen/dialog_text_margin"
    android:gravity="center"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dialog_set_name_session_et_text_size"
        android:textColor="@color/colorWhite"
        android:text="@string/dialog_saving_session_text"
        />

    <ProgressBar
        android:id="@+id/pcSavingSession"
        android:layout_margin="@dimen/activity_login_progress_bar_margin"
        android:layout_width="@dimen/activity_login_progress_bar_size"
        android:layout_height="@dimen/activity_login_progress_bar_size" />


</LinearLayout>