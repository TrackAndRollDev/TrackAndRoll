<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_recycler_list"
    android:layout_width="@dimen/item_recycler_list_image_size"
    android:layout_height="@dimen/item_recycler_list_image_size"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icMyAccountPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        app:civ_border_width="0dp"
        />

    <RelativeLayout
        android:id="@+id/viewPlayerWithoutPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_player_without_photo"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/item_recycler_list_roller_margin"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_roller"
            >

            <TextView
                android:id="@+id/tvPlayerNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/item_recycler_list_number_padding_end"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/activity_players_text_size"
                android:text="66"
                />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>